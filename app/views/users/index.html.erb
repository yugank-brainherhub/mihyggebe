<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="responsive nowrap table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Mobile</th>
      <th>Messenger</th>
      <th>Stripeid</th>
      <th>Above18</th>
      <th>Organization</th>
      <th>Address</th>
      <th>Profession</th>
      <th>Docusign status</th>
      <th>Status</th>
      <th>Checker paid date</th>
      <th>Checker future payment</th>
      <th>Checkr status</th>
      <th>Accountid</th>
      <th>Checkrid</th>
      <th>Invitation status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.try(:role).try(:name) %></td>
        <td><%= user.mobile %></td>
        <td><%= user.messenger %></td>
        <td><%= user.stripeID %></td>
        <td><%= user.above18 %></td>
        <td><%= user.organization %></td>
        <td><%= user.address %></td>
        <td><%= user.profession %></td>
        <td><%= user.docusign_status %></td>
        <td><%= user.status %></td>
        <td><%= user.checker_paid_date %></td>
        <td><%= user.checker_future_payment %></td>
        <td><%= user.checkr_status %></td>
        <td><%= user.accountId %></td>
        <td><%= user.checkrId %></td>
        <td><%= user.invitation_status %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

