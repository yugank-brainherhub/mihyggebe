<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table class="responsive nowrap table table-hover">
  <thead>
    <tr>
      <th>Min</th>
      <th>Max</th>
      <th>Name</th>
      <th>Yearly</th>
      <th>Planid</th>
      <th>Price</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.where(:status =>0).order("min").each do |plan| %>
      <tr>
        <td><%= plan.min %></td>
        <td><%= plan.max %></td>
        <td><%= plan.nickname %></td>
        <td><%= plan.is_yearly %></td>
        <td><%= plan.planId %></td>
        <td><%= plan.price %></td>
        <td><%= plan.status %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
