<p id="notice"><%= notice %></p>

<h1>Room Services</h1>

<table class="responsive nowrap table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Room service type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_services.each do |room_service| %>
      <tr>
        <td><%= room_service.name %></td>
        <td><%= room_service.room_service_type_id %></td>
        <td><%= link_to 'Show', room_service %></td>
        <td><%= link_to 'Edit', edit_room_service_path(room_service) %></td>
        <td><%= link_to 'Destroy', room_service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

