<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table class="responsive nowrap table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Room type</th>
      <th>Bathroom type</th>
      <th>Price</th>
      <th>Available from</th>
      <th>Available to</th>
      <th>Price desc</th>
      <th>Care</th>
      <th>Beds count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.room_type %></td>
        <td><%= room.bathroom_type %></td>
        <td><%= room.price %></td>
        <td><%= room.available_from %></td>
        <td><%= room.available_to %></td>
        <td><%= room.price_desc %></td>
        <td><%= room.care_id %></td>
        <td><%= room.beds_count %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

