-# frozen_string_literal: true
= simple_form_for(@podcast) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :file
    = f.input :publish

  .form-actions
    = f.button :submit
