<p id="notice"><%= notice %></p>

<h1>Staff Details</h1>

<table class="responsive nowrap table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Staff role</th>
      <th>Care</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staff_details.each do |staff_detail| %>
      <tr>
        <td><%= staff_detail.name %></td>
        <td><%= staff_detail.staff_role_id %></td>
        <td><%= staff_detail.care_id %></td>
        <td><%= link_to 'Show', staff_detail %></td>
        <td><%= link_to 'Edit', edit_staff_detail_path(staff_detail) %></td>
        <td><%= link_to 'Destroy', staff_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

