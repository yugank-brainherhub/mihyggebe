<p id="notice"><%= notice %></p>

<h1>Licences</h1>

<table class="responsive nowrap table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Licence type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @licences.each do |licence| %>
      <tr>
        <td><%= licence.name %></td>
        <td><%= licence.licence_type %></td>
        <td><%= link_to 'Show', licence %></td>
        <td><%= link_to 'Edit', edit_licence_path(licence) %></td>
        <td><%= link_to 'Destroy', licence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Licence', new_licence_path %>
