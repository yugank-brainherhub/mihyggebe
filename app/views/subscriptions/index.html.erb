<p id="notice"><%= notice %></p>

<h1>Subscriptions</h1>

<table class="responsive nowrap table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Subscriptionid</th>
      <th>Planid</th>
      <th>Care</th>
      <th>Payment intent</th>
      <th>Subscribed at</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <td><%= subscription.try(:user).try(:name) %></td>
        <td><%= subscription.subscriptionId %></td>
        <td><%= subscription.planId %></td>
        <td><%= subscription.try(:care).try(:name) %></td>
        <td><%= subscription.payment_intent %></td>
        <td><%= subscription.subscribed_at %></td>
        <td><%= subscription.status %></td>
        <td><%= link_to 'Show', subscription %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

